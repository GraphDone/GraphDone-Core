#!/bin/bash

# GraphDone Quick Launcher
# The easiest way to get GraphDone running

set -e

# Colors for better output
RED='\033[0;31m'
GREEN='\033[0;32m'
BLUE='\033[0;34m'
YELLOW='\033[1;33m'
PURPLE='\033[0;35m'
CYAN='\033[0;36m'
NC='\033[0m' # No Color

# Clear screen for a clean start
clear

echo -e "${PURPLE}"
echo "‚ïî‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïó"
echo "‚ïë                                                              ‚ïë"
echo "‚ïë                     üåê GraphDone üåê                          ‚ïë"
echo "‚ïë                                                              ‚ïë"
echo "‚ïë           Graph-native project management system             ‚ïë"
echo "‚ïë                                                              ‚ïë"
echo "‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù"
echo -e "${NC}"

# Function to ensure Node.js is available (same as in run.sh)
ensure_nodejs() {
    # If node/npm not found, try to source nvm
    if ! command -v node &> /dev/null || ! command -v npm &> /dev/null; then
        echo -e "${YELLOW}‚ö†Ô∏è  Node.js/npm not found in PATH, attempting to load from nvm...${NC}"
        
        # Try to load nvm
        export NVM_DIR="$HOME/.nvm"
        if [ -s "$NVM_DIR/nvm.sh" ]; then
            source "$NVM_DIR/nvm.sh"
            if [ -s "$NVM_DIR/bash_completion" ]; then
                source "$NVM_DIR/bash_completion"
            fi
            
            # Use the latest installed version or 18
            if nvm list | grep -q "v18"; then
                nvm use 18
            else
                nvm use node
            fi
            
            echo -e "${GREEN}‚úÖ Loaded Node.js from nvm: $(node --version)${NC}"
        else
            echo -e "${RED}‚ùå Node.js not found and nvm not available.${NC}"
            echo "Please restart your terminal or run:"
            echo "  source ~/.bashrc  # or ~/.zshrc"
            echo "  ./start"
            exit 1
        fi
    fi
}

echo -e "${CYAN}Welcome to GraphDone! This script will get you up and running quickly.${NC}"
echo ""

# Ensure Node.js is available
ensure_nodejs

# Check if setup or workspace repair is needed
setup_needed=false
workspace_repair_needed=false

if [ ! -f "packages/server/.env" ] || [ ! -f "packages/web/.env" ]; then
    setup_needed=true
fi

# Check if workspace dependencies are broken
if [ ! -f "packages/core/dist/index.js" ] || [ ! -L "node_modules/@graphdone/core" ] || [ ! -f "node_modules/.prisma/client/index.js" ]; then
    workspace_repair_needed=true
fi

# Run setup if needed
if [ "$setup_needed" = true ]; then
    echo -e "${YELLOW}üîß First time setup detected...${NC}"
    echo ""
    echo -e "${BLUE}Running initial setup (this may take a few minutes):${NC}"
    echo "  ‚Ä¢ Installing dependencies"
    echo "  ‚Ä¢ Setting up environment variables"
    echo "  ‚Ä¢ Starting database"
    echo "  ‚Ä¢ Running migrations"
    echo "  ‚Ä¢ Building packages"
    echo ""
    
    ./tools/setup.sh
    
    echo ""
    echo -e "${GREEN}‚úÖ Setup complete!${NC}"
    echo ""
elif [ "$workspace_repair_needed" = true ]; then
    echo -e "${YELLOW}üîß Workspace dependencies need repair...${NC}"
    echo ""
    echo -e "${BLUE}Fixing workspace dependencies:${NC}"
    echo "  ‚Ä¢ Rebuilding core package"
    echo "  ‚Ä¢ Generating Prisma client"
    echo "  ‚Ä¢ Ensuring workspace links"
    echo ""
    
    # Quick workspace repair (less aggressive than full setup)
    echo -e "${CYAN}üì¶ Installing dependencies...${NC}"
    npm install
    
    echo -e "${CYAN}üèóÔ∏è  Building core package...${NC}"
    (cd packages/core && npm run build)
    
    echo -e "${CYAN}üîß Generating Prisma client...${NC}"
    (cd packages/server && npx prisma generate)
    
    # Verify the fix worked
    if [ -f "packages/core/dist/index.js" ] && [ -L "node_modules/@graphdone/core" ]; then
        echo ""
        echo -e "${GREEN}‚úÖ Workspace repair complete!${NC}"
        echo ""
    else
        echo ""
        echo -e "${RED}‚ùå Workspace repair failed. Running full setup...${NC}"
        echo ""
        ./tools/setup.sh
    fi
fi

echo -e "${BLUE}üöÄ Starting GraphDone development environment...${NC}"
echo ""

# Start the development environment
if ! ./tools/run.sh; then
    echo ""
    echo -e "${YELLOW}‚ö†Ô∏è  If you see 'command not found' errors:${NC}"
    echo "   1. Restart your terminal"
    echo "   2. Or run: source ~/.bashrc (or ~/.zshrc)"
    echo "   3. Then try: ./start again"
    echo ""
fi