#!/bin/bash

# GraphDone Quick Launcher
# The easiest way to get GraphDone running

set -e

# Colors for better output
RED='\033[0;31m'
GREEN='\033[0;32m'
BLUE='\033[0;34m'
YELLOW='\033[1;33m'
PURPLE='\033[0;35m'
CYAN='\033[0;36m'
NC='\033[0m' # No Color

# Clear screen for a clean start
clear

echo -e "${PURPLE}"
echo "â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—"
echo "â•‘                                                              â•‘"
echo "â•‘                     ğŸŒ GraphDone ğŸŒ                          â•‘"
echo "â•‘                                                              â•‘"
echo "â•‘           Graph-native project management system             â•‘"
echo "â•‘                                                              â•‘"
echo "â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
echo -e "${NC}"

echo -e "${CYAN}Welcome to GraphDone! This script will get you up and running quickly.${NC}"
echo ""

# Check if setup or workspace repair is needed
setup_needed=false
workspace_repair_needed=false

if [ ! -f "packages/server/.env" ] || [ ! -f "packages/web/.env" ]; then
    setup_needed=true
fi

# Check if workspace dependencies are broken
if [ ! -f "packages/core/dist/index.js" ] || [ ! -L "node_modules/@graphdone/core" ]; then
    workspace_repair_needed=true
fi

# Run setup if needed
if [ "$setup_needed" = true ]; then
    echo -e "${YELLOW}ğŸ”§ First time setup detected...${NC}"
    echo ""
    echo -e "${BLUE}Running initial setup (this may take a few minutes):${NC}"
    echo "  â€¢ Installing dependencies"
    echo "  â€¢ Setting up environment variables"
    echo "  â€¢ Starting database"
    echo "  â€¢ Running migrations"
    echo "  â€¢ Building packages"
    echo ""
    
    ./tools/setup.sh
    
    echo ""
    echo -e "${GREEN}âœ… Setup complete!${NC}"
    echo ""
elif [ "$workspace_repair_needed" = true ]; then
    echo -e "${YELLOW}ğŸ”§ Workspace dependencies need repair...${NC}"
    echo ""
    echo -e "${BLUE}Fixing workspace dependencies:${NC}"
    echo "  â€¢ Rebuilding core package"
    echo "  â€¢ Ensuring workspace links"
    echo ""
    
    # Quick workspace repair (less aggressive than full setup)
    echo -e "${CYAN}ğŸ“¦ Installing dependencies...${NC}"
    npm install
    
    echo -e "${CYAN}ğŸ—ï¸  Building core package...${NC}"
    (cd packages/core && npm run build)
    
    # Verify the fix worked
    if [ -f "packages/core/dist/index.js" ] && [ -L "node_modules/@graphdone/core" ]; then
        echo ""
        echo -e "${GREEN}âœ… Workspace repair complete!${NC}"
        echo ""
    else
        echo ""
        echo -e "${RED}âŒ Workspace repair failed. Running full setup...${NC}"
        echo ""
        ./tools/setup.sh
    fi
fi

echo -e "${BLUE}ğŸš€ Starting GraphDone development environment...${NC}"
echo ""

# Start the development environment
if ! ./tools/run.sh; then
    echo ""
    echo -e "${YELLOW}âš ï¸  If you see 'command not found' errors:${NC}"
    echo "   1. Restart your terminal"
    echo "   2. Or run: source ~/.bashrc (or ~/.zshrc)"
    echo "   3. Then try: ./start again"
    echo ""
fi